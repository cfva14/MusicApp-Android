<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp">

    <ImageView
        android:id="@+id/item_track_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/item_track_number"
        android:layout_width="24sp"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_margin="8dp"
        android:visibility="gone"
        tools:text="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Track Title" />

        <TextView
            android:id="@+id/item_track_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Track Album Name" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_track_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:text="3:00" />

    <ImageView
        android:id="@+id/item_track_more"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_more_vert_black" />

</LinearLayout>